{
  "extends": "./tsconfig.json",
  "include": ["scripts/**/*", "database/**/*", "auth/**/*", "types/**/*", "drizzle.config.ts"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "~/components/*": ["./components/*"],
      "~/database/*": ["./database/*"],
      "~/auth/*": ["./auth/*"],
      "~/*": ["./app/*"]
    },
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}